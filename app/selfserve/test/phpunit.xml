<?xml version="1.0" encoding="UTF-8"?>

<phpunit bootstrap="Bootstrap.php" colors="true" stopOnFailure="false" syntaxCheck="true" strict="true">
    <testsuites>
        <testsuite name="OLCS Selfserve Application">
            <directory>./</directory>
            <directory>../vendor/olcs/OlcsCommon/application_test/</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory suffix=".php">../module/SelfServe/src</directory>
            <exclude>
                <directory>../module/SelfServe/src/SelfServe/Table/</directory>
                <directory>../module/SelfServe/src/SelfServe/Form/</directory>
            </exclude>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-html" target="./coverage-report" charset="UTF-8"
             yui="true" highlight="true" lowUpperBound="50"
             highLowerBound="80"/>
    </logging>
</phpunit>
