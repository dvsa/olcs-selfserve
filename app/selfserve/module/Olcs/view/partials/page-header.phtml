<div class="page-header">
  
  <?php if (!isset($this->showNav) || $this->showNav !== false) {
    /** @var \Zend\View\Helper\Navigation\Menu $menu */
    $menu = $this->navigation('navigation')->breadcrumbs()->setPartial('partials/breadcrumbs');
    echo $menu;
  } ?>
  
  <div class="row">
      
    <div class="page-header__wrapper two-thirds">
  
      <?php if (isset($this->pageSubTitle) && $this->pageSubTitle != '') : ?>
        <h3 class="page-header__subtitle">
          <?php echo $this->pageSubTitle; ?>
        </h3>
      <?php endif; ?>
  
      <h1><?php echo $this->pageTitle; ?></h1>
  
      <?php if (isset($this->pageHeaderText)) { ?>
        <div class="page-header__text">
            <p><?php echo $this->pageHeaderText; ?></p>
        </div>
      <?php } ?>
          
      <?php if (isset($this->pageHeaderUrl) && !empty($this->pageHeaderUrl)) { ?>
        <p>
          <b>
