<div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
        <?php echo $this->escapeHtml($this->translate($this->key)); ?>
    </dt>
    <dd class="govuk-summary-list__value">
        <?php if (isset($this->status)) { ?>
            <span style="float: right" class="overview__status <?php echo $this->status['colour']; ?>">
                <?php echo $this->escapeHtml($this->translate($this->status['caption'])); ?>
            </span>
        <?php } ?>
        <?php
            /**  @todo move logic to reusable view helper (listValueFormatter?) to encompass common situations */
            if (isset($this->disableHtmlEscape) && $this->disableHtmlEscape) {
                echo $this->translate($this->value);
            } elseif (isset($this->isCurrency)) {
                echo $this->currencyFormatter($this->value);
            } else {
                echo $this->escapeHtml($this->translate($this->value));
            }
        ?>
    </dd>
</div>
