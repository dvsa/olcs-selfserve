<div class="tabs">
  <ul class="tab-list">
  <?php foreach ($this->container as $page): ?>
    <?php if ($page->isVisible(true) && $this->navigation()->accept($page, false)): ?>
        <li class="tab-list__item<?php if ($page->isActive(true)) { ?> active<?php } ?>">
        <a href="<?php echo $page->getHref(); ?>">
        <?php echo $this->translate($page->getLabel()); ?>
        <?php echo !is_null($page->get('count')) ? '('.$page->get('count').')' : '';?>
        </a>
        </li>
    <?php endif; ?>
  <?php endforeach; ?>
  </ul>
</div>
